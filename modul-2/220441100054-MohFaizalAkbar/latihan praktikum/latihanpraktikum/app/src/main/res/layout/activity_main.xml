<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="393dp"
            android:layout_height="357dp"
            android:src="@drawable/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="33dp"
            android:layout_marginStart="22dp"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/popinb"
            android:text="Universitas Trunojoyo"
            android:textSize="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/selamat"
            android:layout_width="236dp"
            android:textColor="@color/black"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:text="Selamat datang di Aplikasi     milik Universitas Trunojoyo"
            android:textSize="16dp"
            android:fontFamily="@font/popinbs"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <EditText
            android:id="@+id/editTextText"
            android:layout_width="349dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="59dp"
            android:ems="10"
            android:fontFamily="@font/popinbs"
            android:inputType="text"
            android:textColor="@color/brown"
            android:text="Masukkan nama kamu"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/selamat" />

        <ImageButton
            android:id="@+id/bt"
            android:layout_width="283dp"
            android:src="@drawable/at"
            android:layout_height="56dp"
            android:layout_marginTop="55dp"
            android:backgroundTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextText" />

        <TextView
            android:id="@+id/lj"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:fontFamily="@font/popinb"
            android:text="Lanjut"
            android:textColor="@color/white"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/bt"
            app:layout_constraintEnd_toEndOf="@+id/bt"
            app:layout_constraintStart_toStartOf="@+id/bt"
            app:layout_constraintTop_toTopOf="@+id/bt"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>